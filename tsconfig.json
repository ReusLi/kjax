{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "../dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "strictPropertyInitialization": false,
        "allowJs": true,
        "paths": {
            "*": [
                "*",
                "pages/*",
                "components/*",
                "context/*",
                "interface/*",
                "utils/*"
            ]
        }
    },
    "include": [
        "./src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}